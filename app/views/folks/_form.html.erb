<h2> <%  @folk.id ? 'Edit Person' : 'Create Person' %> </h2>

<%= form_for @folk do |f| %>
    <%= f.label :name%>
    <%= f.text_field :name%>

    <%= f.label :age%>
    <%= f.text_field :age%>

    <%= f.label :hair_color%>
    <%= f.text_field :hair_color%>

    <%= f.label :eye_color%>
    <%= f.text_field :eye_color%>

    <%= f.label :gender%>
    <%= f.text_field :gender%>

    <%= f.label :alive%>
    <%= f.check_box :alive , {}, true, false %>
         <%= f.submit 'Submit', :class => 'btn btn-primary' %>
<% end %>

<button>
<%= link_to 'Cancel', root_path%>
</button>


